<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/elemetn_frame"
    android:layout_marginTop="5dp"
    android:animateLayoutChanges="true">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_height="50dp"
                android:id="@+id/eventTypeImageView"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                app:srcCompat="@mipmap/car_icon"
                android:layout_width="50dp"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/eventTypeImageView"
                android:layout_weight="1">
                <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:id="@+id/eventDateTextView"
                    android:layout_centerVertical="false"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:id="@+id/vehicleNickName"
                    android:layout_centerVertical="false"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/eventPrice"
                    android:layout_weight="0.33"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:paddingLeft="5dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/extendLinearLayout"
            android:visibility="visible">

            <TextView
                android:text="Passsed Distance "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/passedDistanceLabelTextView"
                android:paddingLeft="30dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:text="999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/passedDistanceRVITextView"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>